{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",        
    "module": "commonjs",   
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,                          
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true  
  },
  "typeRoots": [
    "@types",
    "./node_modules/@types",
  ],
   "exclude": ["node_modules"],
}
